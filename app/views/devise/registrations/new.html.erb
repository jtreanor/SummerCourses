<h2>Sign up</h2>

<div class="row">
	<div class="span8">
	<%= form_for(resource, :as => resource_name, :html => { :class => "form-horizontal"}, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	<div class="control-group">
		<%= f.label :first_name, class: "control-label" %>
		<div class="controls">
	  		<%= f.text_field :forename, :autofocus => true, placeholder: "John"  %>
	  	</div>
	</div>

	<div class="control-group">
		<%= f.label :last_name, class: "control-label" %>
		<div class="controls">
	  		<%= f.text_field :surname, placeholder: "Doe"  %>
	  	</div>
	</div>
	<div class="control-group">
		<%= f.label :email, class: "control-label" %>
		<div class="controls">
	  		<%= f.email_field :email, placeholder: "someone@example.com"  %>
	  	</div>
	</div>

	<div class="control-group">
		<%= f.label :year_of_birth, class: "control-label" %>
		<div class="controls">
	  		<%= f.text_field :yearOfBirth, placeholder: "YYYY"  %>
	  	</div>
	</div>


	<div class="control-group">
		<%= f.label :sexID, class: "control-label" %>
		<div class="controls">
	  		<%= select_tag 'student[sexID]',
			options_from_collection_for_select(resource.sexes, :sex_id, :sexName) %>
	  	</div>
	</div>

	<div class="control-group">
		<%= f.label :countryCode, class: "control-label" %>
		<div class="controls">
			<%= select_tag 'student[countryCode]',
			options_from_collection_for_select(resource.countries, :countryCode, :countryName) %>
	  	</div>
	</div>

	<div class="control-group">
		<%= f.label :password, class: "control-label" %>
		<div class="controls">
	  		<%= f.password_field :password  %>
	  	</div>
	</div>

	<div class="control-group">
		<%= f.label :confirm_password, class: "control-label" %>
		<div class="controls">
	  		<%= f.password_field :password_confirmation  %>
	  	</div>
	</div>

	<div class="controls">
	  	<%= f.submit "Sign up", class: "btn btn-large" %>
	</div>
	<div class="control-group">
		<p><%= render "devise/shared/links" %></p>
	</div>

	<% end %>
	</div>
</div>
