<% content_for :head do %>
  <script type="text/javascript">
	$(document).ready(function(){
		$("button").on("click", function() {
			command = $("#command").attr('value');
			alert(command);
			$("#output").load("process?command=ls");
		});
	});
  </script>
<% end %>
<h2>Heroku Run</h2>
<p>Enter a command below. e.g. <code><%= link_to "rake db:reset", "?command=rake+db%3Areset" %></code></p>


	<input type="text" name="command" id="command" />
	<button id"run_button" class="btn">Submit</button>

	<% if @output != nil %>
		<h3>Output</h3>
		<div><code><%= @output %></code></div>
	<% end %>
<div id="output"></div>