<div class="hero-unit">
  <h1>Ask us anything</h1>
  <p>Please feel free to ask us about any of our courses. A member of our staff will reply to you as soon as possible.</p>
</div>
<!--end hero unit -->
<div class="row">
  <div class="span6">
    <form action="message_threads" method="post">

      <div class="control-group">
        <label class="control-label" for="user_email"><i class="icon-envelope"></i> Email</label>
        <div class="controls">
          <input id="user_email" class="span6"  name="new_message_thread[user_email]" type="text" <%= "value=#{current_student.email}" unless !student_signed_in? %> />
        </div>
      </div>

      <div class="control-group">
        <label class= "control-label" for="subject" ><i class="icon-question-sign"></i> Subject</label>
        <div class="controls">
          <input id="subject"  class="span6"  name="new_message_thread[subject]" type="text" />
        </div>
      </div>


      <div class="control-group">
        <label class= "control-label"  for="text"> <i class="icon-pencil"></i> Message</label>
        <div class="controls">
          <textarea rows="8" class="span6" name="new_message_thread[content]"  placeholder="Write your question here."></textarea>
        </div>
      </div>

      <div class="control-group">
        <button type="submit" class="btn btn-large btn-primary">Send Message</button>
      </div> 
    </form>
  </div>

  <div class="span6">
    <div class="well">
      <p> Our location: </p>
      <iframe width="100%" height="500" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=University+College+Cork,+College+Road,+Cork,+Ireland&amp;aq=0&amp;oq=university+college+cor&amp;sll=35.675147,-95.712891&amp;sspn=49.29376,93.076172&amp;ie=UTF8&amp;hq=&amp;hnear=University+College+Cork,+College+Rd,+Cork,+Ireland&amp;t=m&amp;z=14&amp;ll=51.892162,-8.492932&amp;output=embed"></iframe>
    </div><!--end well -->
  </div><!--end right --> 

</div>
